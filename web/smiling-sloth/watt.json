{
  "$schema": "https://schemas.platformatic.dev/@platformatic/db/3.19.0.json",
  "watch": {
    "ignore": ["*.sqlite", "*.sqlite-journal"]
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      "./routes"
    ]
  },
  "db": {
    "connectionString": "{PLT_SMILING_SLOTH_DATABASE_URL}",
    "graphql": true,
    "openapi": true,
    "schemalock": true
  },
  "types": {
    "autogenerate": true
  }
}
